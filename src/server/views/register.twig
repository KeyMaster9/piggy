{% extends 'layout.twig' %}

{% block content %}

<div id="user-registration-form-conatiner">
    <form action="/register" method="POST">
        <div class="user-registration-form">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
      
            <label for="forename"><b>Forename</b></label>
            <input type="text" placeholder="Please Enter Your Forename!" name="forename" id="forename" required>
      
            <label for="surname"><b>Surname</b></label>
            <input type="text" placeholder="Please Enter Your Surname!" name="surname" id="surname" required>
      
            <label for="email"><b>Email Address</b></label>
            <input type="email" placeholder="Please Enter Your Email Address!" name="email" id="email" required>

            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Please Enter A Username!" name="username" id="username" required>

            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Please Pick a Password!" name="password" id="password" required>

            <label for="password-confirm"><b>Confirm Password</b></label>
            <input type="password" placeholder="Please Repeat Your Password!" name="password-confirm" id="password-confirm" required>
            <hr>
            

            <p>By creating an account you agree to our <a href="#">Terms of Service</a>.</p>
            <button id="register" type="submit" class="registerbtn" disabled>Register</button>
        </div>
    
        <div class="container signin">
            <p>Already have an account? <a href="#">Sign in</a>.</p>
        </div>
    </form>

</div> 

{% endblock %}