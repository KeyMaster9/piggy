{% extends 'layout.twig' %}

{% block content %}
<div id="user-login-form-conatiner">
		<form action="/Login" method="POST">
			<div class="user-login-form">
				<h1>Login</h1>
				<p>Please fill in this form to login to your account.</p>
				<hr>

				<label for="userName">
					<b>User Name</b>
				</label>
				<input type="text" placeholder="Please Enter Your Username!" name="userName" id="userName" required>

				
				<label for="password">
					<b>Password</b>
				</label>
				<input type="password" placeholder="Please Pick a Password!" name="password" id="password" required>
                <hr>
                <button id="login-btn" type="submit" class="login-btn" disabled>Login</button>
			</div>

			<div class="container register">
				<p>Don't have an account?
					<a href="/register">Register</a>.</p> 
			</div>
		</form>

	</div>
{% endblock %}