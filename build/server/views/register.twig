{% extends 'layout.twig' %}

{% block content %}
	<div id="user-account-form-flex">
		<div id="user-account-form-container">
			<form action="/register" method="POST">
				<div class="user-account-form" id="user-registration-form">
					<h1 class="form-title">Register</h1>
					<p class="form-subtext">Please fill in this form to create an account.</p>
					<input class="form-input" type="text" placeholder="Forename" name="forename" id="forename" required><Br>
					<input class="form-input" type="text" placeholder="Surname" name="surname" id="surname" required><br>
					<input class="form-input" type="email" placeholder="Email Address" name="email" id="email" required><Br>
					<input class="form-input" type="text" placeholder="Username" name="userName" id="userName" required><br>
					<input class="form-input" type="password" placeholder="Password" name="password" id="password" required><br>
					<input class="form-input" type="password" placeholder="Repeat Password" name="password-confirm" id="password-confirm" required>
					<p class="form-subtext">By creating an account you agree to our
						<a href="#">Terms of Service</a>.</p>
					<button class="form-submit" id="register" type="submit" class="register-btn" disabled>Register</button>
					<br>
					<p class="form-subtext">Already have an account?
						<a href="/login">Sign in</a>.</p>
				</div>
				<div class="container signin"></div>
			</form>

		</div>
	</div>

{% endblock %}
